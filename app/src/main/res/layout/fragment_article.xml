<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="30dp">

        <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="Search article"
        android:background="@drawable/selector_shape_search"
        android:drawableRight="@drawable/ic_search_black_24dp"
        android:paddingHorizontal="10dp"
        android:layout_marginBottom="15dp"
        />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="25dp">

            <TextView
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:id="@+id/choseColorButton"
                android:layout_weight="1"
                android:background="@drawable/buttons_color"
                android:text="Choose color"
                android:textColor="@color/white"
                android:layout_marginRight="15dp"
                android:gravity="center"
                />
            <TextView
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:id="@+id/brandButton"
                android:layout_weight="1"
                android:background="@drawable/buttons_color"
                android:text="Choose brand"
                android:textColor="@color/white"

                android:gravity="center"/>
            <TextView
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:id="@+id/choseColoro"
                android:layout_weight="1"
                android:background="@drawable/buttons_color"
                android:text="Search by radius"
                android:textColor="@color/white"

                android:layout_marginLeft="15dp"
                android:gravity="center"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Switch
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:id="@+id/switchBar"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="This article is vegan"
                android:textColor="@color/lightGray"
                android:layout_marginLeft="20dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Switch
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:id="@+id/switchBar2"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Search over Switzerland, if accepted mailing"
                android:textColor="@color/lightGray"
                android:layout_marginLeft="20dp"
                />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lightGray2"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="10dp"/>



    </LinearLayout>







</RelativeLayout>